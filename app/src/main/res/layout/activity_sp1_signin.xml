<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#200544"
    tools:context=".sp_1_signin">

    <Button
        android:id="@+id/idBtnGetOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="244.12dp"
        android:height="47.7dp"
        android:text="get otp"
        app:backgroundTint="#E34234"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/idEdtOtp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.665" />

    <TextView
        android:id="@+id/TextView"
        android:layout_width="207dp"
        android:layout_height="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:background="@drawable/signupbg"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/idBtnVerify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="244.12dp"
        android:height="47.7dp"
        android:text="submit"
        app:backgroundTint="#E34234"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView"
        app:layout_constraintVertical_bias="0.936" />

    <EditText
        android:id="@+id/idEdtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="281dp"
        android:height="45dp"
        android:background="#F4EBEB"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/idBtnGetOtp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView"
        app:layout_constraintVertical_bias="0.841" />

    <EditText
        android:id="@+id/idEdtOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="281dp"
        android:height="45dp"
        android:background="#F4EBEB"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/idBtnVerify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView"
        app:layout_constraintVertical_bias="0.829" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="45dp"
        android:fontFamily="@font/julius_sans_one"
        android:text="Sign IN"
        android:textColor="#FBF6F6"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/TextView"
        app:layout_constraintEnd_toEndOf="@+id/TextView"
        app:layout_constraintStart_toStartOf="@+id/TextView"
        app:layout_constraintTop_toTopOf="@+id/TextView"
        app:layout_constraintVertical_bias="0.647" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="168dp"
        android:text="Not having an account?. Tap to Sign Up."
        android:textColor="#FBFBFB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gotu"
        android:text="Enter OTP"
        android:textColor="#F3F2F2"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/idEdtOtp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBtnGetOtp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="183dp"
        android:layout_height="46dp"
        android:fontFamily="@font/gotu"
        android:text="Enter your Number"
        android:textColor="#F3F2F2"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/idEdtPhoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.666" />


</androidx.constraintlayout.widget.ConstraintLayout>